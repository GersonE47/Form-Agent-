# ===========================================
# Nodari Sales Engine - Environment Variables
# ===========================================

# OpenAI (powers all CrewAI agents)
OPENAI_API_KEY=sk-your-openai-api-key

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# Retell AI
RETELL_API_KEY=your-retell-api-key
RETELL_AGENT_ID=your-retell-agent-id
RETELL_FROM_NUMBER=+1XXXXXXXXXX

# Firecrawl (web scraping for research)
FIRECRAWL_API_KEY=fc-your-firecrawl-api-key

# Google Service Account
# Download JSON key from Google Cloud Console
GOOGLE_CREDENTIALS_PATH=./credentials/google-service-account.json
GOOGLE_CALENDAR_ID=your-calendar-id@example.com

# Server Configuration
WEBHOOK_BASE_URL=http://localhost:8000
DEBUG=true

# Scoring Thresholds
HOT_THRESHOLD=70
WARM_THRESHOLD=40

# OpenAI Model (for CrewAI)
OPENAI_MODEL=gpt-4-turbo-preview
